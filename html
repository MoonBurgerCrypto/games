<header>
  <h1>ðŸŽ® My Game Hub</h1>
</header>

<button class="back" id="backBtn" onclick="closeGame()">â¬… Back to Games</button>

<iframe id="gameFrame" allowfullscreen></iframe>

<div class="grid" id="gameGrid"></div>

<script>
  // ðŸŽ¯ Add your games here (only use sites that allow embedding)
  const games = [
    { title: "Drift Boss", url: "https://www.mathplayground.com/pg_drift_boss.html" },
    { title: "Slope", url: "https://www.slopegame.io/" },
    { title: "Moto X3M", url: "https://www.crazygames.com/game/moto-x3m" },
    { title: "1v1.LOL", url: "https://1v1.lol/" },
    { title: "Basket Random", url: "https://www.crazygames.com/game/basket-random" },
    { title: "Retro Bowl", url: "https://www.crazygames.com/game/retro-bowl" }
  ];

  const grid = document.getElementById("gameGrid");
  const frame = document.getElementById("gameFrame");
  const backBtn = document.getElementById("backBtn");

  // Generate game cards
  games.forEach(game => {
    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `<h3>${game.title}</h3>`;
    card.onclick = () => openGame(game.url);
    grid.appendChild(card);
  });

  // Open game inside iframe
  function openGame(url) {
    frame.src = url;
    frame.style.display = "block";
    grid.style.display = "none";
    backBtn.style.display = "inline-block";
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  // Go back to game list
  function closeGame() {
    frame.src = "";
    frame.style.display = "none";
    grid.style.display = "grid";
    backBtn.style.display = "none";
  }
</script>

</body>
